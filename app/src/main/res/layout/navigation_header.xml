<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_view_profile"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@color/overlay_dark_40"
        android:scaleType="centerCrop"
        android:src="@drawable/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/spacing_mlarge">


<!--        <agency.tango.android.avatarview.views.AvatarView-->
<!--            android:id="@+id/user_avatar"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_marginTop="@dimen/spacing_xmlarge"/>-->

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/user_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/spacing_xmlarge"
            app:av_border_color="@android:color/white"
            app:av_border_width="4dp"
            app:av_text_size_percentage="35" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saeqa"
                android:textStyle="bold"
                android:layout_margin="@dimen/spacing_xmedium"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_view_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sultani"
                android:textStyle="bold"
                android:layout_margin="@dimen/spacing_xmedium"
                android:textColor="@android:color/white"/>


        </LinearLayout>

        <TextView
            android:id="@+id/text_view_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>

